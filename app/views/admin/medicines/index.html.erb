<h1>Medicines</h1>

<%= link_to "New Medicine", new_admin_medicine_path, class: "btn btn-primary" %>

<table>
  <thead>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Price</th>
    <th>Stock</th>
    <th>Category</th>
    <th>Actions</th>
  </tr>
  </thead>
  <tbody>
  <% @medicines.each do |medicine| %>
    <tr>
      <td><%= medicine.name %></td>
      <td><%= medicine.description %></td>
      <td><%= number_to_currency(medicine.price) %></td>
      <td><%= medicine.stock %></td>
      <td><%= medicine.category_id %></td>
      <td>
        <%= link_to "Show", admin_medicine_path(medicine) %> |
        <%= link_to "Edit", edit_admin_medicine_path(medicine) %> |
        <%= link_to "Delete", admin_medicine_path(medicine), method: :delete, data: { confirm: "Are you sure?" } %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
