<h1>Patient Details</h1>

<%= link_to "Back to Dashboard", admin_root_path, class: "btn btn-secondary mb-3" %>

<p><strong>Name:</strong> <%= @patient.name %> <%= @patient.name %></p>
<p><strong>Email:</strong> <%= @patient.email %></p>
<p><strong>Phone:</strong> <%= @patient.phone %></p>
<p><strong>Date of Birth:</strong> <%= @patient.dob %></p>

<%= link_to "Edit", edit_admin_patient_path(@patient), class: "btn btn-warning" %>
<%= link_to "Delete", admin_patient_path(@patient), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>
<%= link_to "Back to Patients", admin_patients_path, class: "btn btn-secondary" %>
