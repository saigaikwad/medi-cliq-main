<div class="category-management-container">
  <div class="page-header">
    <h1 class="page-title">Manage Categories</h1>
    <div class="header-actions">
      <%= link_to 'Back to Admin Dashboard', admin_root_path, class: 'action-btn secondary' %>
      <%= link_to 'Add New Category', new_admin_category_path, class: 'action-btn primary' %>
    </div>
  </div>

  <div class="table-container">
    <table class="mui-table">
      <thead>
        <tr>
          <th>Name</th>
          <th>Created At</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @categories.each do |category| %>
          <tr>
            <td>
              <div class="category-name">
                <span class="category-icon">üìÅ</span>
                <%= category.name %>
              </div>
            </td>
            <td class="date-cell">
              <%= category.created_at.strftime("%d %b %Y") %>
            </td>
            <td class="actions-cell">
              <%= link_to 'Edit', edit_admin_category_path(category), class: 'table-btn edit' %>
              <%= link_to 'Delete', admin_category_path(category), method: :delete, 
                  data: { confirm: 'Are you sure you want to delete this category?' }, 
                  class: 'table-btn delete' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    
    <% if @categories.empty? %>
      <div class="empty-state">
        <div class="empty-icon">üìÇ</div>
        <h3>No Categories Found</h3>
        <p>Start by creating your first category to organize your content.</p>
        <%= link_to 'Add New Category', new_admin_category_path, class: 'action-btn primary' %>
      </div>
    <% end %>
  </div>
</div>

