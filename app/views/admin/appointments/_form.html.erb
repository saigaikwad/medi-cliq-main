<%= form_with(model: [:admin, appointment], local: true) do |form| %>
  <% if appointment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(appointment.errors.count, "error") %> prohibited this appointment from being saved:</h2>
      <ul>
        <% appointment.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :patient_id, "Patient" %>
    <%= form.number_field :patient_id, class: "form-control" %>
    <!-- Replace with a select dropdown if you have a list of patients -->
  </div>

  <div class="form-group">
    <%= form.label :doctor_id, "Doctor" %>
    <%= form.number_field :doctor_id, class: "form-control" %>
    <!-- Replace with a select dropdown if you have a list of doctors -->
  </div>

  <div class="form-group">
    <%= form.label :scheduled_at, "Scheduled At" %>
    <%= form.datetime_select :scheduled_at, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :status %>
    <%= form.text_field :status, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :notes %>
    <%= form.text_area :notes, class: "form-control" %>
  </div>

  <div class="actions">
    <%= form.submit class: "btn btn-primary" %>
  </div>
<% end %>
