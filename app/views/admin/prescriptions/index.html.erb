<h1>Prescriptions</h1>

<%= link_to "New Prescription", new_admin_prescription_path, class: "btn btn-primary" %>

<table>
  <thead>
  <tr>
    <th>Patient</th>
    <th>Doctor</th>
    <th>Dosage</th>
    <th>Instructions</th>
    <th>Actions</th>
  </tr>
  </thead>
  <tbody>
  <% @prescriptions.each do |prescription| %>
    <tr>
      <td><%= prescription.patient_id %></td>
      <td><%= prescription.doctor_id %></td>
      <td><%= prescription.dosage %></td>
      <td><%= prescription.instructions %></td>
      <td>
        <%= link_to "Show", admin_prescription_path(prescription) %> |
        <%= link_to "Edit", edit_admin_prescription_path(prescription) %> |
        <%= link_to "Delete", admin_prescription_path(prescription), method: :delete, data: { confirm: "Are you sure?" } %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
