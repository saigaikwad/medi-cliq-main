<%= form_with model: @doctor, url: admin_doctors_path, local: true, html: { class: "mui-form" } do |f| %>
  <fieldset class="mui-panel" style="max-width: 600px; margin: auto; padding: 2rem;">
    <legend style="font-size: 1.5rem; font-weight: bold; margin-bottom: 1rem;">Create New Doctor</legend>

    <div class="mui-textfield mui-textfield--float-label">
      <%= f.label :first_name, "First Name" %>
      <%= f.text_field :first_name, class: "mui-textfield__input" %>
    </div>

    <div class="mui-textfield mui-textfield--float-label">
      <%= f.label :last_name, "Last Name" %>
      <%= f.text_field :last_name, class: "mui-textfield__input" %>
    </div>

    <div class="mui-textfield mui-textfield--float-label">
      <%= f.label :email, "Email Address" %>
      <%= f.email_field :email, class: "mui-textfield__input" %>
    </div>

    <div class="mui-textfield mui-textfield--float-label">
      <%= f.label :phone_number, "Phone Number" %>
      <%= f.telephone_field :phone_number, class: "mui-textfield__input" %>
    </div>

    <div class="mui-textfield mui-textfield--float-label">
      <%= f.label :license_no, "License Number" %>
      <%= f.text_field :license_no, class: "mui-textfield__input" %>
    </div>

    <div class="mui-textfield mui-textfield--float-label">
      <%= f.label :education, "Education" %>
      <%= f.text_field :education, class: "mui-textfield__input" %>
    </div>

    <div class="mui-textfield mui-textfield--float-label">
      <%= f.label :password, "Password" %>
      <%= f.password_field :password, class: "mui-textfield__input" %>
    </div>

    <div class="mui-textfield mui-textfield--float-label">
      <%= f.label :password_confirmation, "Confirm Password" %>
      <%= f.password_field :password_confirmation, class: "mui-textfield__input" %>
    </div>

    <div style="margin-top: 1.5rem;">
      <%= f.submit "Create Doctor", class: "mui-btn mui-btn--raised mui-btn--primary" %>
    </div>
  </fieldset>
<% end %>
